<div class="row">
	<div class="col-md-6">
	  <table class="table table-striped">
	    <thead>
	    <tr>
	      <th>innhold i p</th>
	      <th>Index</th>
	    </tr>
	    </thead>
	    <tbody>
	    <tr ng-repeat="p in ['a', 'q', 'c'] | filter:q" data-ng-click="arne()">
	      <td>{{ p }}</td>
	      <td>{{ $index }}</td>
	    </tr>
	    </tbody>
	  </table>
	</div>
	<div class="col-md-6" data-ng-show='demo2'>
	  <div ng-repeat="n in list">
		  <strong>Navn: </strong>{{n.firstname}} {{n.lastname}} <br>
		</div>
	</div>
</div>

